@model web_mvc.Models.Figurine

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Figurine</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
           Price
        </dt>
        <dd>
            @Html.DisplayFor(model => model.prix_ttc)
        </dd>
        <dt>
           Quantity (shop)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.quantite_magasin)
        </dd>
        <dt>
            Quantity (stock)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.quantite_stock)
        </dd>
        <dt>
            Release Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.date_parution)
        </dd>
        <dt>
            Number of copies
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nb_exemplaires)
        </dd>
        <dt>
            Weight
        </dt>
        <dd>
            @Html.DisplayFor(model => model.poids)
        </dd>
        <dt>
            Width
        </dt>
        <dd>
            @Html.DisplayFor(model => model.largeur)
        </dd>
        <dt>
            Height
        </dt>
        <dd>
            @Html.DisplayFor(model => model.hauteur)
        </dd>
        <dt>
            Length
        </dt>
        <dd>
            @Html.DisplayFor(model => model.longueur)
        </dd>
        <dt>
            Reference
        </dt>
        <dd>
            @Html.DisplayFor(model => model.reference)
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayNameFor(model => model.description)
        </dd>
        <dt>
            Brand
        </dt>
        <dd>
            @Html.Raw(ViewBag.Marque)
        </dd>
        <dt>
            Category
        </dt>
        <dd>
            @Html.Raw(ViewBag.Categorie)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }    
    <a asp-action="Index">Back to List</a>
</div>
